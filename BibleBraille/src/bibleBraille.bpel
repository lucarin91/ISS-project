<?xml version="1.0" encoding="UTF-8" ?>
<process
    name="bibleBraille"
    targetNamespace="http://enterprise.netbeans.org/bpel/BibleBraille/bibleBraille"
    xmlns:tns="http://enterprise.netbeans.org/bpel/BibleBraille/bibleBraille"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
    xmlns:sxt="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/Trace" 
    xmlns:sxed="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/Editor2"
    xmlns:sxat="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/Attachment"
    xmlns:sxeh="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/ErrorHandling" xmlns:ns0="http://j2ee.netbeans.org/wsdl/TwitterProxy/src/TwitterProxyWSDL" xmlns:ns1="aaa" xmlns:ns2="http://j2ee.netbeans.org/wsdl/BibleBraille/src/BibleBrailleWSDL" xmlns:ns3="http://www.webserviceX.NET" xmlns:ns4="http://j2ee.netbeans.org/wsdl/TwitterProxy/src/TwitterProxyWSDLReply" xmlns:ns5="http://docs.oasis-open.org/wsbpel/2.0/process/executable" xmlns:ns6="http://enterprise.netbeans.org/bpel/WizardCorrelationProperties">
    <import namespace="http://j2ee.netbeans.org/wsdl/BibleBraille/src/BibleBrailleWSDL" location="BibleBrailleWSDL.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://enterprise.netbeans.org/bpel/BibleWebservice.asmxWrapper" location="BibleWebservice.asmxWrapper.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://www.webserviceX.NET" location="http://www.webservicex.net/BibleWebservice.asmx?WSDL" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://enterprise.netbeans.org/bpel/braille.asmxWrapper" location="braille.asmxWrapper.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://www.webserviceX.NET" location="http://www.webservicex.net/braille.asmx?WSDL" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://j2ee.netbeans.org/wsdl/TwitterProxy/src/TwitterProxyWSDL" location="PastebinProxyWSDL.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://j2ee.netbeans.org/wsdl/TwitterProxy/src/TwitterProxyWSDLReply" location="PastebinProxyWSDLReply.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://enterprise.netbeans.org/bpel/WizardCorrelationProperties" location="WizardCorrelationProperties.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <partnerLinks>
        <partnerLink name="BibleService" xmlns:tns="http://enterprise.netbeans.org/bpel/BibleWebservice.asmxWrapper" partnerLinkType="tns:BibleWebserviceSoapLinkType" partnerRole="BibleWebserviceSoapRole"/>        <partnerLink name="BrailleService" xmlns:tns="http://enterprise.netbeans.org/bpel/braille.asmxWrapper" partnerLinkType="tns:BrailleSoapLinkType" partnerRole="BrailleSoapRole"/>
        <partnerLink name="PastebinProxy" xmlns:tns="http://j2ee.netbeans.org/wsdl/TwitterProxy/src/TwitterProxyWSDL" partnerLinkType="tns:PastebinProxyWSDL" partnerRole="PastebinProxyWSDLPortTypeRole"/>
        <partnerLink name="External" xmlns:tns="http://j2ee.netbeans.org/wsdl/BibleBraille/src/BibleBrailleWSDL" partnerLinkType="tns:BibleBrailleWSDL" myRole="BibleBrailleWSDLPortTypeRole"/>
        <partnerLink name="PastebinProxyCallBack" xmlns:tns="http://j2ee.netbeans.org/wsdl/TwitterProxy/src/TwitterProxyWSDLReply" partnerLinkType="tns:PastebinProxyWSDLReply" myRole="PastebinProxyWSDLReplyPortTypeRole"/>
    </partnerLinks>
    <variables>
        <variable name="pastebinProxyCallbackIn" xmlns:tns="http://j2ee.netbeans.org/wsdl/TwitterProxy/src/TwitterProxyWSDLReply" messageType="tns:PastebinProxyWSDLReplyOperationRequest"/>
        <variable name="pastebinProxyIn" xmlns:tns="http://j2ee.netbeans.org/wsdl/TwitterProxy/src/TwitterProxyWSDL" messageType="tns:PastebinProxyWSDLOperationRequest"/>
        <variable name="brailleIn" xmlns:tns="http://www.webserviceX.NET" messageType="tns:BrailleTextSoapIn"/>
        <variable name="brailleOut" xmlns:tns="http://www.webserviceX.NET" messageType="tns:BrailleTextSoapOut"/>
        <variable name="out" xmlns:tns="http://j2ee.netbeans.org/wsdl/BibleBraille/src/BibleBrailleWSDL" messageType="tns:BibleBrailleWSDLOperationResponse"/>
        <variable name="in" xmlns:tns="http://j2ee.netbeans.org/wsdl/BibleBraille/src/BibleBrailleWSDL" messageType="tns:BibleBrailleWSDLOperationRequest"/>
        <variable name="bibleIn" xmlns:tns="http://www.webserviceX.NET" messageType="tns:GetBibleWordsByChapterAndVerseSoapIn"/>
        <variable name="bibleOut" xmlns:tns="http://www.webserviceX.NET" messageType="tns:GetBibleWordsByChapterAndVerseSoapOut"/>
        <variable name="Fault1FaultVar" messageType="ns2:BibleBrailleWSDLOperationFault"/>
    </variables>
    <correlationSets>
        <correlationSet name="wzrd_set_InvokePastebin_OnMessage_Pick_PastebinProxyWSDLReplyOperation" properties="ns6:wzrd_prop_string_string"/>
    </correlationSets>
    <scope name="ExternalScope">
        <faultHandlers>
            <catch faultName="ns1:to_fault">
                <sequence name="Sequence1">
                    <assign name="Assign7">
                        <copy>
                            <from>'to_fault'</from>
                            <to variable="Fault1FaultVar" part="error"/>
                        </copy>
                    </assign>
                    <reply name="to_faultReply" partnerLink="External" operation="BibleBrailleWSDLOperation" portType="ns2:BibleBrailleWSDLPortType" faultName="ns2:fault1" variable="Fault1FaultVar"/>
                </sequence>
            </catch>
        </faultHandlers>
        <sequence>
            <receive name="Receive" createInstance="yes" partnerLink="External" operation="BibleBrailleWSDLOperation" portType="ns2:BibleBrailleWSDLPortType" variable="in"/>
                <flow name="Flow1">
                    <sequence name="FlowSequence">
                        <assign name="Assign4">
                            <copy>
                                <from variable="in" part="book"/>
                                <to>$bibleIn.parameters/ns3:BookTitle</to>
                            </copy>
                            <copy>
                                <from variable="in" part="chapter"/>
                                <to>$bibleIn.parameters/ns3:chapter</to>
                            </copy>
                            <copy>
                                <from variable="in" part="verse"/>
                                <to>$bibleIn.parameters/ns3:Verse</to>
                            </copy>
                        </assign>
                        <invoke name="InvokeBible" partnerLink="BibleService" operation="GetBibleWordsByChapterAndVerse"  inputVariable="bibleIn" outputVariable="bibleOut" portType="ns3:BibleWebserviceSoap"/>
                        <assign name="Assign5">
                            <copy>
                                <from>$bibleOut.parameters/ns3:GetBibleWordsByChapterAndVerseResult</from>
                                <to>$brailleIn.parameters/ns3:InText</to>
                            </copy>
                            <copy>
                                <from>'14'</from>
                                <to>$brailleIn.parameters/ns3:TextFontSize</to>
                            </copy>
                        </assign>
                        <invoke name="InvokeBraille" partnerLink="BrailleService" operation="BrailleText"  inputVariable="brailleIn" outputVariable="brailleOut"/>
                        <assign name="Assign3">
                            <copy>
                                <from>$brailleOut.parameters/ns3:BrailleTextResult</from>
                                <to variable="out" part="braille"/>
                            </copy>
                        </assign>
                    </sequence>
                    <scope name="PastebinScope">
                        <faultHandlers>
                            <catch faultName="ns1:reply_fault">
                                <assign name="Assign1">
                                    <copy>
                                        <from>string($pastebinProxyCallbackIn.status)</from>
                                        <to variable="out" part="status"/>
                                    </copy>
                                </assign>
                            </catch>
                        </faultHandlers>
                        <sequence name="FlowSequence1">
                            <assign name="Assign6">
                                <copy>
                                    <from>concat('request for the book ', $in.book, ' chapter ', $in.chapter, ' verse ', $in.verse)</from>
                                    <to variable="pastebinProxyIn" part="msg"/>
                                </copy>
                            </assign>
                            <invoke name="InvokePastebin" partnerLink="PastebinProxy" operation="PastebinProxyWSDLOperation" portType="ns0:PastebinProxyWSDLPortType" inputVariable="pastebinProxyIn">
                                <correlations>
                                    <correlation set="wzrd_set_InvokePastebin_OnMessage_Pick_PastebinProxyWSDLReplyOperation" initiate="yes"/>
                                </correlations>
                            </invoke>
                                <pick name="Pick">
                                    <onMessage partnerLink="PastebinProxyCallBack" operation="PastebinProxyWSDLReplyOperation" portType="ns4:PastebinProxyWSDLReplyPortType" variable="pastebinProxyCallbackIn">
                                        <correlations>
                                            <correlation set="wzrd_set_InvokePastebin_OnMessage_Pick_PastebinProxyWSDLReplyOperation" initiate="no"/>
                                        </correlations>
                                        <if name="checkPastebinResponse">
                                             <condition>contains($pastebinProxyCallbackIn.status, 'Bad API request')</condition>
                                             <throw name="ThrowReply_fault" faultName="ns1:reply_fault"/>
                                                <else>
                                                    <assign name="Assign2">
                                                        <copy>
                                                            <from>'ok'</from>
                                                            <to variable="out" part="status"/>
                                                        </copy>
                                                    </assign>
                                                </else>
                                            </if>
                                        </onMessage>
                                        <onAlarm>
                                            <for>'P0Y0M0DT0H0M10.0S'</for>
                                            <throw name="ThrowTo_fault" faultName="ns1:to_fault"/>
                                        </onAlarm>
                                </pick>
                        </sequence>
                    </scope>
                </flow>
            <reply name="Reply" partnerLink="External" operation="BibleBrailleWSDLOperation" portType="ns2:BibleBrailleWSDLPortType" variable="out"/>
        </sequence>
    </scope>
</process>
